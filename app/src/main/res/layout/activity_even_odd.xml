<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_even_odd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="codeian.michael.evenoddgame.EvenOdd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highText"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <TextView
        android:text="Score : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreText"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/highText"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randText"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="#f70c0c"
        android:layout_below="@+id/timeRemainText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scoreText"
        android:layout_alignEnd="@+id/timeRemainText"
        android:id="@+id/scoreMainText"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/highText"
        android:layout_alignStart="@+id/btnEven"
        android:id="@+id/highMainText"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Time Remaining :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/timeRemainText"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:layout_marginStart="17dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/timeRemainText"
        android:layout_toEndOf="@+id/scoreMainText" />

    <Button
        android:text="  ODD  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOdd"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:textSize="36sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/highText" />

    <Button
        android:text="  EVEN  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEven"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/btnOdd"
        android:layout_alignBottom="@+id/btnOdd"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
